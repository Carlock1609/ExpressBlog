
<%- include('partials/header') %>

  <div class="container-fluid text-center">

    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-3">
        <div id="mapid"></div>
      </div>
      <!-- <div id="mapdiv"></div> -->
      <div id="formDiv" class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mt-2">
                <!-- THIS IS THE MODAL THAT COVERS THE FORM -->
      <!-- WE MIGHT HAVE TO FIX THE LOGIN TO BE ABLE TO CHECK THE currentUser -->
      <!-- This might be longish function, We will have to write everything twice, and use if or else -->
        <% if(!currentUser) { %>
          <div id="loginContainer">
            <div id="vertCenter" class="container text-center">
              <div id="centerStuff" class="card mb-3 pb-3" style="max-width: 18rem;">
                <div class="card-header" id="login_caption">SIGN UP
                  <hr>
                  <div class="card-body">
                    <form action="/login" method="POST">
                      <label for="username">Username: </label>
                      <input type="text" name="username">
                      <label for="password">Password: </label>
                      <input type="password" name="password">
                      <button type="submit" class="btn btn-outline-dark mt-3">Login</button>         
                    </form>
                    <hr>
                      <a href="/register"><button class="btn btn-outline-dark">Register</button></a>
                  </div>
                </div>
              </div>    
            </div>
          </div>
        <% } %>

        <h4>Help us Track Murder Hornets!</h4>
        <h4><span><img src="../images/NiceHornet.png" alt="" height="40px" height="40px"></span> Save <u>Lives,</u> Save <u>Bees</u> <span><img src="../images/Bee3.png" alt="" height="40px" height="40px"></span></h4>
        <h4>Click on the map to get Started!</h4>  
        <form id="markerForm" action="/" method='POST'>
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <label for="lat">Lat: </label>
              <input id="lat" type="text" name='lat'>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
              <label for="lng">Lng: </label>
              <input id="lng" type="text" name='lng'>
            </div>
            <div class="col-12">
              <textarea id="note" type="text" name='note' rows="3" cols="45" placeholder="Enter in notes here..."></textarea>
            </div>
            <div class="col-12">
              <select name="image" id="image">
                <option value="./images/Dead_bee1.png">Dead Bees</option>
                <option value="./images/MH8.png">Hornet Sighting</option>
                <option value="./images/Nest2.png">Hornets Nest</option>
              </select>
            </div>
            <div class="col-12">
              <button class="btn btn-outline-dark mt-3" type='submit'>Submit</button>

            </div>
          </div>
          </form>
          
          <h4>Logged-in User: <%= currentUser %></h4>
          
          <!-- Displaying all markers -->
          <br>
          <div class="container-fluid mb-5">
              <img id="infoImg" src="../images/MHinfo.jpg" alt="">
          </div>



          <!-- THIS IS WHERE THE DB IS DROPPING ALL THE DATA -->
          <div id="allMarkers" value="<%= markers %>"></div>

          
          <!-- CONTACT MODAL -->
           <div id="myModal" class="modal"> 
            <!-- Modal content -->
             <div class="modal-content">
              <span class="close">&times;</span>
             
                <a href="mailto: pestprogram@agr.wa.gov?subject=Murder Hornets!&body=I saw Murder Hornets at this exact location!"><button class="btn btn-outline-light mt-5 mb-5">Email</button></a>
                <div class="container">
                  <h4 id="contactWords">To report an Asian Giant Hornet sighting, contact the Washington State Department of Agriculture Pest Program at 1‑800‑443‑6684</h4>
                  <h4 id="contactWords">For questions about protecting honey bees from hornets, contact WSU Extension scientist Tim Lawrence at (360) 639-6061</h4>
                </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Transfer information from a click on the map, to the form below -->


<%- include('partials/footer') %>

